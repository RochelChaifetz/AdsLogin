@model AdViewModel

<div b-78gchgm0rj class="container">
    <main b-78gchgm0rj role="main" class="pb-3">

        <div class="row">
            <div class="col-md-6 offset-md-3">
                @foreach (var a in Model.AllAds)
                {
                    <div class="bg-light rounded-3 p-5 mt-3">
                        @if (a.Name != null)
                        {
                            <h5>Listed by @a.Name</h5>
                        }
                        <h5>Listed on @a.DateCreated.ToLongDateString()</h5>
                        <h5>Phone Number: @a.Phone</h5>
                        <h3>Details:</h3>
                        <p>@a.Description</p>
                        @if (a.Delete)
                        {
                            <form method="post" action="/home/deletead">
                                <input type="hidden" name="id" value="@a.Id" />
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>

    </main>
</div>
